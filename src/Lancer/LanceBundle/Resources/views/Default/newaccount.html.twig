{% extends 'base.html.twig' %}
{% block title %}Registration{% endblock %}
{% block body %}
    {{ include('header.html.twig') }}
<h1>Registration</h1>
    <div class="container">
        {{ include('message.html.twig') }}
        <div class="center-block">
            <div class="row col-sm-6">
                <form class="form-horizontal" method="post" action="{{ path('lance_registration') }}">
                    <div class="form-group">
                        <label class="col-sm-4" for="email">Email: </label>
                        <div class="col-sm-8">
                            <input id="email" name="email" required="required" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="pass">Password:</label>
                        <div class="col-sm-8">
                            <input id="pass" name="password" required="required" type="password" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="name">First Name: </label>
                        <div class="col-sm-8">
                            <input id="name" name="name" required="required" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="sname">Second Name:</label>
                        <div class="col-sm-8">
                            <input id="sname" name="second_name" required="required" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-8">
                            <input type="submit" class="btn btn-info"/>
                            <input type="reset" class="btn btn-danger"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}