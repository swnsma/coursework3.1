{% extends 'base.html.twig' %}
{% block title %}Forget password{% endblock %}
{% block body %}
    {{ include('header.html.twig') }}
    <h1>Forgot password?</h1>
    <div class="container">
        <div class="row col-sm-6">
            <form class="form-horizontal" method="post" action="{{ path('lance_remind_password') }}">
                <div class="form-group">
                    <label class="col-sm-4" for="email">Your email</label>
                    <div class="col-sm-8">
                        <input id="email" name="email" required="required" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-8">
                        <input type="submit" class="btn btn-info"/>
                        <input type="reset" class="btn btn-danger"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}