{% extends 'base.html.twig' %}
{% block title %}Install{% endblock %}
{% block body %}
    {{ include('header.html.twig') }}
    <h1>Database credentials</h1>
<div class="container">
    <div class="center-block">
        <div class="row col-sm-6">
            <form class="form-horizontal" method="post" action="{{ path('lance_lancer_install_process') }}">
                <div class="form-group">
                    <label class="col-sm-4" for="server">Server Name</label>
                    <div class="col-sm-8">
                        <input id="server" name="server" required="required" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4" for="port">Port</label>
                    <div class="col-sm-8">
                        <input id="port" name="port" type="number" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4" for="user">User</label>
                    <div class="col-sm-8">
                        <input autocomplete="off" name="user" id="user" required="required" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4" for="pass">Password</label>
                    <div class="col-sm-8">
                        <input autocomplete="off" name="pass" id="pass" required="required" type="password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4" for="schema">Schema Name</label>
                    <div class="col-sm-8">
                        <input id="schema" name="schema" required="required" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-8">
                    <input type="submit" class="btn btn-info"/>
                    <input type="reset" class="btn btn-danger"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}