{% extends 'base.html.twig' %}
{% block title %}Reset password{% endblock %}
{% block body %}
    {{ include('header.html.twig') }}
    <h1>Reset password</h1>
    <div class="container">
        <div class="row col-sm-6">
            <form class="form-horizontal" id="reset-form" method="post" action="{{ path('lance_save_reset_password') }}">
                <input type="hidden" name="hash" value="{{ hash }}"/>
                <div class="form-group">
                    <label class="col-sm-4" for="password">New password</label>
                    <div class="col-sm-8">
                        <input id="password" name="password" required="required" type="password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4" for="password2">Repeat password</label>
                    <div class="col-sm-8">
                        <input id="password2" name="password2" required="required" type="password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-8">
                        <input type="submit" class="btn btn-info"/>
                        <input type="reset" class="btn btn-danger"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        jQuery("#reset-form").submit(function(event){
            if(jQuery('#password').val()!=jQuery('#password2').val()) {
                event.preventDefault();
                alert('Passwords don\'t match!');
            }
        })
    </script>
{% endblock %}