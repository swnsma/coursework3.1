{% extends 'base.html.twig' %}
{% block title %}Service{% endblock %}
{% block body %}
    {{ include('header.html.twig') }}
    <h1>Service {{ template_type }}</h1>
    <div class="container">
        <div class="center-block">
            <div class="row col-sm-10">
                <form class="form-horizontal" method="post" action="{{ path('service_save') }}">
                    <input name="id" type="hidden" value="{% if service is defined %}{{ service.id }}{% endif %}"/>
                    <div class="form-group">
                        <label class="col-sm-4" for="title">Title</label>
                        <div class="col-sm-8">
                            <input id="title" name="title" required="required" type="text" class="form-control"
                                    value="{% if service is defined %}{{ service.title }}{% endif %}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="price">Price</label>
                        <div class="col-sm-8">
                            <input id="price" name="price" type="number" step="any" class="form-control"
                                   value="{% if service is defined %}{{ service.price }}{% endif %}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="description">Description</label>
                        <div class="col-sm-8">
                            <textarea id="description" name="description">
                                {%  if service is defined %}
                                    {{ service.description }}
                                {% endif %}
                            </textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-8">
                            <input type="submit" class="btn btn-info"/>
                            {%  if service is defined %}
                                <a href="{{ path('service_homepage', {id:service.id}) }}">
                                    {% else %}
                                    <a href="{{ path('services_list') }}">
                                {% endif %}
                                <div class="btn btn-danger" formnovalidate>Cancel</div></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('vendor/tinymce/js/tinymce/tinymce.min.js') }}"></script>
    <script>tinymce.init({ selector:'textarea', plugins: "image"});</script>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/manticora/disease/css/disease.css') }}"
{% endblock %}