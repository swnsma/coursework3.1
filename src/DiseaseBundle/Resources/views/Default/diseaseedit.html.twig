{% extends 'base.html.twig' %}
{% block title %}Disease{% endblock %}
{% block body %}
    {{ include('header.html.twig') }}
    <h1>Disease {{ template_type }}</h1>
    <div class="container">
        <div class="center-block">
            <div class="row col-sm-10">
                <form class="form-horizontal" method="post" action="{{ path('disease_save') }}">
                    <input name="id" type="hidden" value="{% if disease is defined %}{{ disease.id }}{% endif %}"/>
                    <div class="form-group">
                        <label class="col-sm-4" for="title">Title</label>
                        <div class="col-sm-8">
                            <input id="title" name="title" required="required" type="text" class="form-control"
                                    value="{% if disease is defined %}{{ disease.title }}{% endif %}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="photo">Photo</label>
                        <div class="col-sm-8">
                            <input id="photo" name="photo" type="text" class="form-control"
                                   value="{% if disease is defined %}{{ disease.photo }}{% endif %}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="description">Description</label>
                        <div class="col-sm-8">
                            <textarea id="description" name="description">
                                {%  if disease is defined %}
                                    {{ disease.description }}
                                {% endif %}
                            </textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-8">
                            <input type="submit" class="btn btn-info"/>
                            {%  if disease is defined %}
                            <a href="{{ path('disease_homepage', {id:disease.id}) }}">
                                {% else %}
                                <a href="{{ path('disease_list') }}">
                                    {% endif %}
                                    <div class="btn btn-danger" >Cancel</div></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('vendor/tinymce/js/tinymce/tinymce.min.js') }}"></script>
    <script>tinymce.init({ selector:'textarea', plugins: "image"});</script>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/manticora/disease/css/disease.css') }}"
{% endblock %}